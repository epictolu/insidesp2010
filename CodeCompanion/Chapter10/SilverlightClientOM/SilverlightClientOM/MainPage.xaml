<UserControl x:Class="SilverlightClientOM.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Height="300" Width="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel x:Name="Panel1" Orientation="Vertical">
            <TextBlock Text="Site URL" />
            <TextBox x:Name="SiteUrl" />
            <TextBlock Text="List Name"/>
            <TextBox x:Name="ListName" />
            <Button x:Name="CreateButton" Content="Create Announcements List" Click="Button_Click" />
            <TextBlock x:Name="Messages" />
        </StackPanel>
    </Grid>
</UserControl>
